{% extends "layout/base.html.twig" %}

{% block content %}
    {% for errors in flash("alert") %}
        <div class="row">
            <div class="col-8 offset-2 alert alert-danger mt-4" role="alert">
                <h4 class="alert-heading">Oops! Il semble y avoir une erreur!</h4>
                <hr>
                <p>{{ errors }}</p>
            </div>
        </div>
    {% endfor %}
{% endblock %}