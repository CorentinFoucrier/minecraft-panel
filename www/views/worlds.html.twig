{% extends "layout/base.html.twig" %}

{% block content %}
    {% if errors in flash("alert") %}
        <div class="alert alert-danger" role="alert">
            {{errors}}
        </div>
    {% endif %}
    {% if successes in flash("success") %}
        <div class="alert alert-success" role="alert">
            {{successes}}
        </div>
    {% endif %}

    <section class="row mt-4 ml-2">
        <div class="col-md-6">
            <h4 class="title mb-3">Ajouter un monde !</h4>
            <form enctype="multipart/form-data" action="" method="post">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="world" class="custom-file-input">
                        <label class="custom-file-label" for="inputGroupFile04">Choisir un fichier...</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Ajouter</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <section class="row mt-4 ml-2">
        <div class="col-6">
            <table class="table table-striped table-sm table-bordered">
                <thead>
                    <tr>
                        <th>Monde</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>

                <tbody>
                {% for world in worlds %}
                    <tr>
                        <td>{{world}}</td>
                        <td><button class="btn btn-danger btn-sm float-right"><i class="far fa-trash-alt"></i></button></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    <input id="token" type="hidden" value="{{token}}">
{% endblock %}

{% block javascripts %}
    <script src="assets/js/worlds.js"></script>
{% endblock %}