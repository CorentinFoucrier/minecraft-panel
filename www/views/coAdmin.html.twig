{% extends "layout/base.html.twig" %}

{% block content %}
    {% for errors in flash("alert") %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{errors}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for successes in flash("success") %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{successes}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <section class="row m-4">
        <div class="col-md-6">
            <h4 class="title mb-3">Ajouter ou supprimer un co-administrateur</h4>
            <form action="" method="post">
                <div class="form-group">
                    <label for="coAdminInput">Nom du Co-Administrateur</label>
                    <div class="input-group">
                        <input type="text" id="coAdminInput" name="coAdminInput" class="form-control" required="required">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Ajouter</button>
                        </div>
                    </div>
                    <span id="coAdminInputHelp" class="form-text text-muted">Un mot de passe sera généré.</span>
                </div>
            </form>
        </div>
    </section>

    <section class="row m-4">
        <div class="col-6">
            <table class="table table-striped table-sm table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Modifier les droits</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>

                <tbody>
                    {% for coAdmin in coAdmins %}
                        <tr id="{{coAdmin.id}}">
                            <td>{{coAdmin.username}}</td>
                            <td>
                                <button class="btn btn-primary btn-sm float-right" onclick="editCoAdmin('{{coAdmin.id}}', '{{ csrf_token() }}');">
                                    <i class="far fa-edit"></i>
                                </button>
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm float-right" onclick="deleteCoAdmin('{{coAdmin.id}}', '{{ csrf_token() }}');">
                                    <i class="far fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

    {% include "Includes/Modals/permissionsModal.html.twig" %}
    {% if password != false %}
        {% include "Includes/Modals/passwordModal.html.twig" %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ uri("dashboard") }}assets/js/coAdmin.js"></script>
    {% if password != false %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.4/clipboard.min.js"></script>
        <script>
            new ClipboardJS('.btn');
        </script>
        <script>
            $('#passwordModal').modal('toggle');
        </script>
    {% endif %}
{% endblock %}
