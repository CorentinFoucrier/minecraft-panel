{% extends "layout/base.html.twig" %}

{% block content %}
    {# Version infos #}
    <div class="row m-4">
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card">
                <div class="card-header h6">
                    Current version:
                    <span class="float-right" id="version">{{currentVersion|replace({'_': ' '})}}</span>
                </div>
                <div class="card-body">
                    <p class="card-text text-success">
                        <i class="far fa-check-circle"></i>
                        Version à jour !</p>
                    <button class="btn btn-dark btn-sm float-right" data-toggle="modal" data-target="#changeVersion">Changer la version</button>
                </div>
            </div>
        </div>
        {# Server Management #}
        <div class="offset-md-1 col-md-7">
            <div class="card">
                <h5 class="card-header">
                    <b>Gestion du serveur</b>
                </h5>
                <div class="card-body">
                    <div class="row p-md-2 text-center">
                        <div class="col-sm-4">
                            <i class="fas fa-user-friends h2"></i><br/>
                            Nombre de joueurs<br/>
                            <span id="playersOnline">...</span> / 
                            {% if maxPlayers %}
                                {{maxPlayers}}
                            {% else %}
                                ?
                            {% endif %}
                        </div>
                        <div class="col-sm-4">
                            <i class="fas fa-microchip h2"></i><br/>
                            Utilisation CPU<br/>
                            <span id="cpu">N/A</span> %
                        </div>
                        <div class="col-sm-4">
                            <i class="fas fa-memory h2"></i><br/>
                            Utilisation RAM<br/>
                            <span id="ram">N/A</span> / {{ramMax}} MB
                        </div>
                    </div>
                    <br/>
                    <div class="row float-right">
                        <button onclick="serverStart();" id="startButton" class="btn btn-primary mr-md-1 mb-1 text-uppercase not-allowed" disabled>
                            <i class="fas fa-play"></i>
                            Démarrer
                            <span id="startButtonLoading"></span>
                        </button>
                        <button onclick="serverRestart();" id="restartButton" class="btn btn-warning mr-md-1 mb-1 text-uppercase not-allowed wip" disabled>
                            <i class="fas fa-redo"></i>
                            Redémmarer
                        </button>
                        <button onclick="serverStop();" id="stopButton" class="btn btn-danger text-uppercase mr-md-1 mb-1 not-allowed" disabled>
                            <i class="fas fa-power-off"></i>
                            Stop
                            <span id="stopButtonLoading"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# Console #}
    <div class="row m-4">
        <div class="offset-md-1 col-md-10 mt-4">
            <div class="card">
                <h5 class="card-header">
                    <b>Console &gt;_</b>
                </h5>
                <div class="row no-gutters">
                    <div class="col-12 p-md-2">
                        <div class="card-body py-md-0">
                            <div class="row">
                                {# Console renderer #}
                                <div id="log" class="border pl-1 overflow" style="height:250px;"></div>
                            </div>

                            <div class="row pt-2">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text bg-dark">
                                            <i class="fas fa-terminal"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="text" name="send-command" id="send-command">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="button" id="send" onclick="sendCommand();">Envoyer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="token" value="{{token}}">
    {% include "Includes/Modals/SelectVersionModal.html.twig" %}
    {% include "Includes/Modals/eula.html.twig" %}
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/socket.io-client@2/dist/socket.io.js" crossorigin></script>
    <script>
        const socket = io.connect('{{ socketUrl }}');
    </script>
    <script src="{{ uri("dashboard") }}assets/js/dashboard.js"></script>
    <script src="{{ uri("dashboard") }}assets/js/console.js"></script>
    <script src="{{ uri("dashboard") }}assets/js/selectVersion.js"></script>
{% endblock %}
