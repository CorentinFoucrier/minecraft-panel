<form action="" method="post" class="col-md-8 px-md-0">
    <div class="form-group">
        <div class="input-group">
            <input type="text" id="add_whitelist" name="add_whitelist" class="form-control" required="required" placeholder="Ajouter un joueur Ã  la list">
            <input type="hidden" name="token" value="{{token}}">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit">Ajouter</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-striped table-sm table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>UUID</th>
            <th>Supprimer</th>
        </tr>
    </thead>

    <tbody>
        {% for player in whitelist %}
            <tr id="{{player.name}}">
                <td>{{player.name}}</td>
                <td>{{player.uuid}}</td>
                <td>
                    <button class="btn btn-danger btn-sm float-right delete" data-username="{{player.name}}">
                        <i style="pointer-events: none;" class="far fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
