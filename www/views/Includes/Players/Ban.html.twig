<table class="table table-striped table-sm table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>UUID</th>
            <th>Date</th>
            <th>Supprimer</th>
        </tr>
    </thead>

    <tbody>
    {% for player in bannedPlayers %}
        <tr>
            <td>{{player.name}}</td>
            <td>{{player.uuid}}</td>
            <td>{{player.created}}</td>
            <td><button class="btn btn-danger btn-sm float-right delete"><i class="far fa-trash-alt"></i></button></td>
        </tr>
    {% endfor %}
    </tbody>
</table>