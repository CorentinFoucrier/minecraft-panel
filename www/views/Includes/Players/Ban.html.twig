<form action="" method="post" class="col-md-8 px-md-0">
    <div class="form-group">
        <input type="text" id="add_banned-players" name="add_banned-players" class="form-control" required="required" placeholder="Ajouter un joueur Ã  la list">
    </div>
    <div class="form-group">
        <input type="text" id="reason" name="reason" class="form-control" placeholder="Raison">
    </div>
