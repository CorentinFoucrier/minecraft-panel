<div class="modal" id="accountDeleteConfirm" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ lang('account.modal.accountDeleteConfirm.title') }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-auto">
                <form class="form-inline" action="account/delete" method="POST">
                    <input type="hidden" name="token" value="{{ csrf_token() }}">
                    <button class="btn btn-primary mr-4" type="submit">{{ lang('account.modal.accountDeleteConfirm.confirm') }}</button>
                    <button class="btn btn-danger" type="button" data-dismiss="modal">{{ lang('general.button.cancel') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>